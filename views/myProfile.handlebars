<!DOCTYPE html>
<html lang="en">

<head>
            <link rel="stylesheet" href="css/bootstrap.min.css">
            <link rel="stylesheet" href="css/style.css">
            <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <div id="wrap">
        <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#" onclick="history.go(-1);return false;"><span class="glyphicon glyphicon-circle-arrow-left"></span></a>
                    <a class="navbar-brand" href="menu"><span class="glyphicon glyphicon-home"></span></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav">
                        <li><a id="btn-myprofile">My Profile</a>
                        </li>
                        <li><a id="btn-mymeetups">My Meetups</a>
                        </li>
                        <li><a id="btn-about">About</a>
                        </li>
                        <li><a id="btn-help">Help/FAQ</a>
                        </li>
                        <li><a id="btn-logout">Logout</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </div>

        <div class="meganandiecover">
            <img class="img-thumbnail h-img" src="{{photo}}" align="middle" />
               
        </div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#bio">Bio</a></li>
          <li><a href="#classes" data-toggle="tab">Current Classes</a></li>
          <li><a href="#interests" data-toggle="tab">Interests</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          
            <div class="tab-pane active" id="bio">
                <div class="col-xs-12 col-md-12 section">
                    <h1 class="section-heading">{{firstname}} {{lastname}}</h1>
                    <br>
                    <p class="lead section-lead">{{bio}}</p>
                    <p class="lead section-lead">Languages: {{languages}}</p>
                    <p class="lead section-lead">Hometown/Country: {{home}}</p>
                </div>
            </div>

            <div class="tab-pane" id="classes">
                <div class="col-xs-12 col-md-12 section">
                <h2>Current Classes</h2> 
                    <ul>       
                        {{#each classes}}
                            <li>{{name}}</li>
                        {{/each}}                             
                    </ul>
                </div>
            </div>

            <div class="tab-pane" id="interests">
                <div class="col-xs-12 col-md-12 section">
                <h2>Interests</h2>
                    <ul>
                        {{#each interests}}
                            <li>{{name}}</li>
                        {{/each}}   
                    </ul>
                </div>
            </div>
        </div> 
        

        <div id="content-zero" class="container">
            
            <div class="row">
                <div class="col-xs-12 col-md-12 section">
                    <h1 class="section-heading">{{firstname}} {{lastname}}</h1>
                    <br>
                    <p class="lead section-lead">{{bio}}</p>
                    <p class="lead section-lead">Languages: {{languages}}</p>
                    <p class="lead section-lead">Hometown/Country: {{home}}</p>

                
                    <h2>Current Classes</h2> 
                    <ul>       
                        {{#each classes}}
                            <li>{{name}}</li>
                        {{/each}}                             
                    </ul>
                    
                    <h2>Interests</h2>
                    <ul>
                        {{#each interests}}
                            <li>{{name}}</li>
                        {{/each}}   
                    </ul>
                </div>
            </div>
        </div>
        <div id="push"></div>
    </div>
    <div id="footer">
          <div class="container">
            <h1 align="center">Profile</h1>
          </div>
    </div>   

