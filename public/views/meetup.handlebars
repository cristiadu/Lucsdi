    <div id="content-minor" class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <br>
                <br>
                <br>
                {{#if created}}
                    <span class="alert alert-success alert-dismissable col-xs-12 col-md-12">Meetup sucessifully created!
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></span>
                {{/if}}
                <h3 class="page-header">Join a Meetup</h3>
            </div>
        </div>
       
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {{#each meetups.meetup}}
                        <div class="item {{active}}">
                            <!-- NOTE: The images on the carousels have the right height, but now they aren't wide enough.
                            Maybe we should just set the img class="slide-image" like on the clubsOrg.handlebars page?
                            Or I could try reformatting the pictures in iPhoto... -Megan --> 
                            <img class="slide-image" src="{{image}}" alt="">
                            <div class="carousel-caption">
                                <h4>{{title}} at {{location}} {{date}}</h4>
                                
                            </div>
                        </div>
                       {{/each}}
                    </div>
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-12 col-xs-12">
                <br>
                <a class="btn btn-primary col-md-3 col-xs-12" id="btn-joinMeetup">Join Meetups!</a>
            </div>
        </div>
       
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h3 class="page-header">Start a Meetup</h3>
            </div>
        </div>

        <!-- {{#if created}}
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <br>
                <span class="alert alert-success alert-dismissable col-xs-12 col-md-12">Meetup sucessifully created!
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button></span>
            </div>
        </div> 
        {{/if}} -->

        <div class="row">
            <div class="col-xs-12 col-md-12">
                <form role="form" action="newmeetup" method="post">
                  <div class="form-group">
                    <label for="title">Event title</label>
                    <small><en> *please complete all fields for contacting purposes* </en></small>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter event title">
                  </div>
                  <div class="form-group">
                    <label for="host">Host</label>
                    <input type="text" class="form-control" id="host" name="host" placeholder="i.e. UCSD CogSci Student Association">
                  </div>
                  <div class="form-group">
                    <label for="local">Location</label> 
                    <input type="text" class="form-control" id="local" name="local" placeholder="Enter the location">
                  </div>
                  <div class="form-group">
                    <label for="date">Date and Time</label>
                    <input type="text" class="form-control" id="date" name="date" placeholder="XX/XX/20XX XX:XX(am/pm)">
                  </div>
                  <div class="form-group">
                    <label for="email">Email </label><small>
                    <input type="email" class="form-control" id="email" name="email" placeholder="i.e. kappasocialchair@gmail.com">
                  </div>
                  <div class="form-group">
                    <label for="phone">Phone number</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="(xxx) xxx-xxxx">
                  </div>
                  <div class="form-group">
                    <label for="local">Image URL</label><small> <en> *optional* </en> </small>
                    <input type="text" class="form-control" id="image" name="image" placeholder="i.e. https://rimacfield.jpg">
                  </div>

                  <input type="submit" class="btn btn-primary col-md-3 col-xs-12" value="Create Meetup">
                 

                </form>
                
            </div>
        </div>
    </div>
    <div id="push"></div>
</div>
